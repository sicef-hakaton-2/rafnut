{% extends 'AppBundle:user:base.html.twig' %}
{%block body_class%}
 class="gray-bg"
{% endblock %}
{% block body %}


    
    <div class="loginColumns animated fadeInDown">
        <div class="row">

            <div class="col-md-6">
                <h1 class="logo-name" style="margin-top: -10px;">REFU-G</h1>
                <h2 class="font-bold">Welcome to IME</h2>

                <p>
                    Find your family. <strong> Reunite</strong>.
                </p>

                <p>
                    We are helping you find your friends and family, so you could see where they are if you lost them on your trip to saftey. 
                </p>

                <p>
                    Track rutes your friends took, so you could find a better route for yourself.
                </p>


            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                    <form class="m-t" role="form" action="{{ path('login_check') }}" method="post">
                        {% if error %}
                            <div><strong>{{ error.message }}</strong></div>
                        {% endif %}
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Username" required="" id="username" name="_username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password" required="" id="password"  name="_password" >
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                        <a href="#">
                            <small>Forgot password?</small>
                        </a>

                        <p class="text-muted text-center">
                            <small>Do not have an account?</small>
                        </p>
                        <a class="btn btn-sm btn-white btn-block" href="{{ url('register') }}">Create an account</a>
                    </form>
                    <p class="m-t">
                        <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small>
                    </p>
                </div>
            </div>
        </div>
        <hr/>
